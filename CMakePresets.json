{
    "version": 2,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "x64-windows-msvc-debug",
            "displayName": "x64 Windows MSVC Debug",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "BUILD_TESTING": true,
                "DPLX_DP_DISABLE_WORKAROUNDS": false,
                "DPLX_DP_FLAG_OUTDATED_WORKAROUNDS": true,
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_DEBUG_POSTFIX": "-Debug",
                "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreadedDebug",
                "VCPKG_TARGET_TRIPLET": "x64-windows-static",
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": [
                        "Windows"
                    ]
                }
            }
        },
        {
            "name": "x64-windows-msvc-release",
            "displayName": "x64 Windows MSVC Release",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "BUILD_TESTING": true,
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded",
                "VCPKG_TARGET_TRIPLET": "x64-windows-ltcg-static",
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": [
                        "Windows"
                    ]
                }
            }
        },
        {
            "name": "x64-windows-msvc-lto",
            "displayName": "x64 Windows MSVC Release LTO",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "BUILD_TESTING": true,
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_INTERPROCEDURAL_OPTIMIZATION": true,
                "CMAKE_CXX_FLAGS_RELEASE": "/Zi /O2 /Ob3 /DNDEBUG",
                "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded",
                "VCPKG_TARGET_TRIPLET": "x64-windows-ltcg-static",
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": [
                        "Windows"
                    ]
                }
            }
        },
        {
            "name": "x64-windows-xclang-debug",
            "displayName": "x64 Windows Clang Debug",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "BUILD_TESTING": true,
                "DPLX_DP_DISABLE_WORKAROUNDS": false,
                "DPLX_DP_FLAG_OUTDATED_WORKAROUNDS": true,
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_DEBUG_POSTFIX": "-ClangDebug",
                "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreadedDebug",
                "VCPKG_TARGET_TRIPLET": "x64-windows-static",
                "CMAKE_C_COMPILER": "clang-cl",
                "CMAKE_CXX_COMPILER": "clang-cl"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": [
                        "Windows"
                    ],
                    "intelliSenseMode": "windows-clang-x64",
                    "enableClangTidyCodeAnalysis": true
                }
            }
        },
        {
            "name": "x64-linux-gcc-debug",
            "displayName": "x64 Linux GCC Debug",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": {
                    "value": "$env{HOME}/.vs/vcpkg/scripts/buildsystems/vcpkg.cmake",
                    "type": "FILEPATH"
                },
                "BUILD_TESTING": true,
                "DPLX_DP_DISABLE_WORKAROUNDS": false,
                "DPLX_DP_FLAG_OUTDATED_WORKAROUNDS": true,
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": [
                        "Linux"
                    ]
                },
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
                    "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}",
                    "copySourcesOptions": {
                        "exclusionList": [ ".vs", ".git", ".vs", ".vscode", "out", "vcpkg_installed" ]
                    },
                    "copyAdditionalIncludeDirectoriesList": [
                        "${sourceDir}/out/build/${presetName}/vcpkg_installed/x64-linux/include"
                    ]
                }
            }
        },
        {
            "name": "x64-linux-xclang-debug",
            "displayName": "x64 Linux Clang Debug",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{HOME}/.vs/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "BUILD_TESTING": true,
                "DPLX_DP_DISABLE_WORKAROUNDS": false,
                "DPLX_DP_FLAG_OUTDATED_WORKAROUNDS": true,
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": [
                        "Linux"
                    ]
                },
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
                    "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}",
                    "copySourcesOptions": {
                        "exclusionList": [ ".vs", ".git", ".vs", ".vscode", "out", "vcpkg_installed" ]
                    },
                    "copyAdditionalIncludeDirectoriesList": [
                        "${sourceDir}/out/build/${presetName}/vcpkg_installed/x64-linux/include"
                    ]
                }
            }
        }
    ]
}
